{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "es6",
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]
}
